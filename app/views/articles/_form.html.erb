

<div class="row justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @article %>
    <%= form_with(model: @article, class: "mt-4 shadow p-4 mb-2 bg-info rounded", local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :title, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%=f.text_field :title, class: "form-control shadow rounded", placeholder: "Article title" %>
      </div>
    </div>
      <div class="form-group row justify-content-center">
        <%= f.label :description , class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%=f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Article description" %>
        </div>
  <%= f.submit class: "btn btn-outline-light btn-lg mt-3" %>
<% end %>
    </div>
    <%= link_to '[ Return to articles ]', articles_path, class: "text-info" %>
  </div>
</div>