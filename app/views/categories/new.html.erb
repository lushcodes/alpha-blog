<div id="page-content">
  <div class="container">
    <h1 class="text-center mt-4">Create New Category</h1>

<div class="row justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @category %>
    <%= form_with(model: @category, class: "mt-4 shadow p-4 mb-2 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "Category", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%=f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg mt-3" %>
        </div>
    <% end %>
    <%= link_to '[ Return to articles ]', articles_path, class: "text-info" %>
  </div>
</div>

  </div>
</div>
