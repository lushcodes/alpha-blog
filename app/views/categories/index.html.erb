<div id="page-content">
  <div class="container">
    <h1 class="text-center mt-4">Categories</h1>
		 <div class="flickr_pagination mt-4">
      <%= will_paginate @categories, :container => false %>
    </div>
    <% @categories.each do |category| %>
    <div class="container col-6">
			<div class="card text-center mt-4 shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category.id), class: "text-success" %></h5>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(category.created_at) %> ago,
          edited <%= time_ago_in_words(category.updated_at) %> ago</small>
        </div>
      </div>
     </div>
		<% end %>
		<div class="flickr_pagination mt-4 mb-4">
      <%= will_paginate @categories, :container => false %>
    </div>
  </div>
</div>